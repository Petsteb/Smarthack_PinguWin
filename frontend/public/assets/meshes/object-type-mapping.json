{
  "classification_rules": {
    "description": "Automatic object type classification based on bounding box dimensions",
    "rules": [
      {
        "type": "room",
        "mesh": "room",
        "conditions": {
          "min_width": 100,
          "min_height": 100,
          "description": "Large areas (100+ width AND height)"
        }
      },
      {
        "type": "desk",
        "mesh": "desk",
        "conditions": {
          "min_width": 50,
          "max_width": 100,
          "min_height": 30,
          "max_height": 120,
          "description": "Medium rectangular objects (desks/tables)"
        }
      },
      {
        "type": "chair",
        "mesh": "chair",
        "conditions": {
          "min_width": 10,
          "max_width": 50,
          "min_height": 15,
          "max_height": 60,
          "description": "Small objects (chairs)"
        }
      },
      {
        "type": "table",
        "mesh": "table",
        "conditions": {
          "min_width": 30,
          "max_width": 80,
          "min_height": 30,
          "max_height": 80,
          "aspect_ratio_min": 0.8,
          "aspect_ratio_max": 1.2,
          "description": "Square/round medium objects (tables)"
        }
      },
      {
        "type": "door",
        "mesh": "door",
        "conditions": {
          "max_dimension": 30,
          "aspect_ratio_min": 2.0,
          "description": "Small thin objects (doors)"
        }
      }
    ],
    "default": {
      "type": "generic",
      "mesh": "desk",
      "description": "Fallback for unclassified objects"
    }
  },
  "notes": {
    "customization": "You can manually map specific objects by adding an 'manual_mappings' array with object indices",
    "example": {
      "manual_mappings": [
        {
          "index": 0,
          "type": "room",
          "name": "Conference Room A"
        }
      ]
    }
  }
}
